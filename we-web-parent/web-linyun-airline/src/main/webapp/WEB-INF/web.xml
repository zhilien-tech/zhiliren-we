	<!-- 字符编码转换拦截器配置 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>com.uxuexi.core.web.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- 扫描注入@相关的包 -->
	<filter>
		<filter-name>scanFile</filter-name>
		<filter-class>com.uxuexi.core.web.filter.ScanFilter</filter-class>
		<init-param>
			<param-name>scanFiles</param-name>
			<param-value>
		</param-value>
		</init-param>
	</filter>

	<!-- Nutz核心拦截器配置 -->
	<filter>
		<filter-name>nutz</filter-name>
		<filter-class>org.nutz.mvc.NutFilter</filter-class>
		<init-param>
			<param-name>modules</param-name>
			<param-value>com.linyun.airline.MainModule</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>nutz</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- 错误页面配置 -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/common/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/common/500.jsp</location>
	</error-page>
	
	<!-- session监听器 -->
	<listener>    
	    <listener-class>    
	        com.linyun.airline.admin.search.service.SessionCounter  
	    </listener-class>    
	</listener>
	
		<!-- <session-config>
		<session-timeout>1</session-timeout>
	</session-config> -->

	
</web-app>
